{{ header }}
<div id="information-sitemap" class="container my-2 md:my-4">


   <div class="breadcrumb">
   <a href="{{ home }}">
   <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-secondary" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
      </a>
    {% for breadcrumb in breadcrumbs %}
     <a class="breadcrumb-child" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
     <span class="mx-2  dark:text-gray-300 rtl:-scale-x-100">
     
        <svg xmlns="http://www.w3.org/2000/svg" 
        class="w-5 h-5 fill-secondary" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
    </span>
    {% endfor %}
  </div>


  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
      <h1 class="heading-title my-2">{{ heading_title }}</h1>

      <div class="flex ">


        <div class="  basis-1/2">
          <ul class="list-disc list-inside ">
            {% for category_1 in categories %}
              <li><a href="{{ category_1.href }}"
               class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800">
              {{ category_1.name }}</a>
                {% if category_1.children %}
                  <ul class="space-y-1 pr-5 mt-2  list-decimal list-inside ">
                    {% for category_2 in category_1.children %}
                      <li><a href="{{ category_2.href }}"
                       class=" hover:underline  text-primary-500">
                      {{ category_2.name }}</a>
                        {% if category_2.children %}
                          <ul class="pr-10 space-y-1 list-disc ">
                            {% for category_3 in category_2.children %}
                              <li><a href="{{ category_3.href }}"
                                             class=" text-sm hover:underline text-blue-800 hover:text-blue-800">
                              {{ category_3.name }}</a></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>


        <div class=" basis-1/2">
          <ul class="list-disc list-inside ">
            <li><a class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800" href="{{ special }}">{{ text_special }}</a></li>
            <li><a class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800" href="{{ account }}">{{ text_account }}</a>
              <ul class="space-y-1 pr-5 mt-2  list-decimal list-inside">
                <li><a  class=" hover:underline  text-primary-500" href="{{ edit }}">{{ text_edit }}</a></li>
                <li><a  class=" hover:underline  text-primary-500" href="{{ password }}">{{ text_password }}</a></li>
                <li><a  class=" hover:underline  text-primary-500" href="{{ address }}">{{ text_address }}</a></li>
                <li><a  class=" hover:underline  text-primary-500" href="{{ history }}">{{ text_history }}</a></li>
              {#  <li><a  class=" hover:underline  text-primary-500" href="{{ download }}">{{ text_download }}</a></li>#}
              </ul>
            </li>
            <li><a class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800" href="{{ history }}">{{ text_cart }}</a></li>
            <li><a class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800" href="{{ checkout }}">{{ text_checkout }}</a></li>
            <li><a class=" text-xl font-bold  text-blue-500 hover:underline hover:text-blue-800" href="{{ search }}">{{ text_search }}</a></li>
            <li>{{ text_information }}
              <ul class="space-y-1 pr-5 mt-2  list-decimal list-inside">
                {% for information in informations %}
                  <li><a  class=" hover:underline  text-primary-500" href="{{ information.href }}">{{ information.title }}</a></li>
                {% endfor %}
                <li><a  class=" hover:underline  text-primary-500" href="{{ contact }}">{{ text_contact }}</a></li>
              </ul>
            </li>
          </ul>
        </div>


      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}



