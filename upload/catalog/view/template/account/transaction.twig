{{ header }}
<div id="account-transaction" class="container my-2 md:my-4">


<div class="breadcrumb">
   <a href="{{ home }}">
   <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-secondary" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
      </a>
    {% for breadcrumb in breadcrumbs %}
     <a class="breadcrumb-child" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
     <span class="mx-2  dark:text-gray-300 rtl:-scale-x-100">
     
        <svg xmlns="http://www.w3.org/2000/svg" 
        class="w-5 h-5 fill-secondary" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
    </span>
    {% endfor %}
  </div>


    <div class="md:flex md:flex-row md:gap-4 ">

    <div id="content" class="mt-2 md:basis-2/3 flex flex-col gap-4">{{ content_top }}


      <h1 class="heading-title">{{ heading_title }}</h1>

      <p class="text-xl"> {{ text_total }} <b>{{ total }}</b>.</p>


      <table class="border-collapse border border-slate-400">
        <thead >
          <tr>
            <td class="text-center border border-slate-400">{{ column_date_added }}</td>
            <td class="text-center  border border-slate-400">{{ column_description }}</td>
            <td class="text-center  border border-slate-400">{{ column_amount }}</td>
          </tr>
        </thead>
        <tbody class=" border border-slate-400">
          {% if transactions %}
            {% for transaction in transactions %}
              <tr>
                <td class="text-center ">{{ transaction.date_added }}</td>
                <td class="text-center ">{{ transaction.description }}</td>
                <td class="text-center ">{{ transaction.amount }}</td>
              </tr>
            {% endfor %}
          {% else %}
            <tr>
              <td class="text-center" colspan="5">{{ text_no_results }}</td>
            </tr>
          {% endif %}
        </tbody>
      </table>

      <div class="row">
        <div class="col-sm-6 text-center ">{{ pagination }}</div>
        <div class="col-sm-6 text-center ">{{ results }}</div>
      </div>
      
       <a href="{{ continue }}" class="btn-primary">{{ button_continue }}</a>
   
      {{ content_bottom }}</div>
   <div class="md:basis-1/3 "> {{ column_right }}</div>
</div>
{{ footer }}




